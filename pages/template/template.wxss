/* pages/template/template.wxss */
.temContainer {
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin: 15rpx 0;
}
.avatar_data{
  padding: 10px;
}
.avatar_data image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.avatar_data text {
  font-size: 32rpx;
}
.chicken{
  margin-left: 10rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin: 10rpx;
}
.detailPic {
  width: 100%;
  height: 360rpx;
}
.detailText {
  display: block;
  height: 160rpx;
  overflow: hidden;
  font-size: 32rpx;
  text-indent: 32rpx;
}
.other image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.other text {
  font-size: 28rpx;
  margin-right: 10rpx;
}