/* pages/detail/detail.wxss */
.detailContainer {
  display: flex;
  flex-direction: column;
}
.headImg {
  width: 100%;
  height: 430rpx;
}
.userDetail {
  padding: 10rpx;
}
.userDetail image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.userDetail text {
  font-size: 28rpx;
  margin-left: 15rpx;
}
.fuck {
  font-size: 32rpx;
  font-weight: 700;
  margin: 15rpx;
}
.iconTotal {
  position: relative;
}
.iconDetail {
  float: right;
  margin-right: 45rpx;
}
.iconDetail image {
  width: 90rpx;
  height: 90rpx;
  padding-left: 20rpx;
}
.line {
  position: absolute;
  width: 90%;
  height: 3rpx;
  background: #eee;
  left: 5%;
  top: 45rpx;
  z-index: -1;
}
.content {
  font-size: 32rpx;
  text-indent: 32rpx;
}
button {
  float: right;
  font-size: 28rpx;
  width: 200rpx;
  margin-right: 20rpx;
  margin-top: 15rpx;
}
.music {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
}
